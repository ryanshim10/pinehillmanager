# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=newsletter
POSTGRES_USER=newsletter
POSTGRES_PASSWORD=change-me-to-strong-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================================
# Web Application Configuration
# ===========================================
WEB_PORT=8088
SESSION_SECRET=change-me-to-long-random-string-min-32-chars
BOOTSTRAP_ADMIN_EMAIL=admin@yourcompany.com

# ===========================================
# SSO Configuration (Provisioning-based)
# ===========================================
# 프록시/게이트웨이가 인증 완료 후 사번을 헤더로 주입
SSO_HEADER_EMPID=X-SSO-EMPID
# 현대위아 회사코드(기본 1000)
SSO_ALLOWED_COMPANY_CODE=1000

# ===========================================
# SMTP Configuration (for sending emails)
# ===========================================
# For Office 365 / Outlook:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_STARTTLS=true
# SMTP_SSL=false
# SMTP_USER=your-email@company.com
# SMTP_PASS=your-app-password
# SMTP_FROM=newsletter@company.com

# For MailHog (development):
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_STARTTLS=false
SMTP_SSL=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=newsletter@example.com

# ===========================================
# LLM Configuration (for AI newsletter generation)
# ===========================================
# Mode: chat_completions | responses
LLM_MODE=chat_completions

# For Azure OpenAI:
# LLM_CHAT_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2024-02-01
# LLM_AUTH_TYPE=api-key
# LLM_API_KEY=your-azure-api-key
# LLM_API_KEY_HEADER=api-key

# For OpenAI:
# LLM_CHAT_URL=https://api.openai.com/v1/chat/completions
# LLM_AUTH_TYPE=bearer
# LLM_API_KEY=sk-your-api-key

LLM_CHAT_URL=
LLM_RESPONSES_URL=
LLM_RESPONSES_MODEL=gpt-4o-mini
LLM_AUTH_TYPE=api-key
LLM_API_KEY=
LLM_API_KEY_HEADER=api-key
LLM_TIMEOUT_SEC=60
LLM_MAX_TOKENS=1200

# ===========================================
# Worker Configuration
# ===========================================
WORKER_TIMEZONE=Asia/Seoul
# Tick interval in seconds (300 = 5 minutes)
WORKER_TICK_SECONDS=300
